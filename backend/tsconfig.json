{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "types": [
            "node",
            "jest"
        ],
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "noImplicitAny": true, // recommended => true
        "removeComments": true,
        "strict": false,
        "strictBindCallApply": true,
        "strictFunctionTypes": false, // recommended => true
        "strictNullChecks": true,
        "target": "es2017"
    },
    "lib": [
        "es2017"
    ],
    "include": [
        "**/*.json",
        "**/*.ts", "jest.config.js",
    ]
}